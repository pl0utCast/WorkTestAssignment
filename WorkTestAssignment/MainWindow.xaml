<Window x:Class="WorkTestAssignment.MainWindow"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
        xmlns:local="clr-namespace:WorkTestAssignment"
        mc:Ignorable="d"
        Title="Test Exercise" Height="400" Width="280" Initialized="Window_Initialized" ResizeMode="NoResize">
    <Grid Margin="0,0,0,4">
        <TextBox x:Name="TB_FIO" MaxLength ="250" HorizontalAlignment="Left" Margin="20,54,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="235" Height="19"/>
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="20,22,0,0" VerticalAlignment="Top" Height="26" Width="51"/>
        <xctk:MaskedTextBox x:Name="MTB_Phone" Mask="+7(000)000-00-00" HorizontalAlignment="Left" Margin="20,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" Height="19"/>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="20,81,0,0" VerticalAlignment="Top" Height="27" Width="79"/>
        <xctk:MaskedTextBox x:Name="MTB_Passport" Mask="0000 000000" HorizontalAlignment="Left" Margin="20,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" Height="19"/>
        <Label Content="Паспорт (Серия и номер)" HorizontalAlignment="Left" Margin="20,142,0,0" VerticalAlignment="Top" Height="27" Width="185"/>
        <Button Content="Открыть файл" HorizontalAlignment="Left" Margin="19,249,0,0" VerticalAlignment="Top" Width="118" Click="Button_Click"/>
        <Button Content="Сохранить запись" HorizontalAlignment="Left" Margin="19,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.151,0.002" Width="118" Click="Button_Click_1"/>
        <Button Content="Очистить файл" HorizontalAlignment="Left" Margin="19,289,0,0" VerticalAlignment="Top" Width="118" Click="Button_Click_2"/>
    </Grid>
</Window>
