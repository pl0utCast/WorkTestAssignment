<Window x:Class="WorkTestAssignment.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTestAssignment"
        mc:Ignorable="d"
        Title="inputData.json" Height="400" Width="280" ResizeMode="NoResize">
    <Grid>
        <TabControl>
            <TabItem Header="Обработанные записи">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="TB_Processed" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="254" Height="318" Initialized="TB_Processed_Initialized" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
                </Grid>
            </TabItem>
            <TabItem Header="Исходные данные">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="TB_Raw" HorizontalAlignment="Center" Height="318" TextWrapping="Wrap" VerticalAlignment="Center" Width="254" Initialized="TB_Raw_Initialized" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
